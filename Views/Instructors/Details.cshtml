@model SchoolCourseRegistration.ViewModel.InstructorViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: lavenderblush;
        font-weight: 800;
    }

    div {
        font-weight: 800;
    }
</style>

<h1>Instructor Details</h1>

<div>
    <h4> @Model.Instructor.FirstName @Model.Instructor.LastName </h4>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            Instructor ID
        </dt>
        <dd class="col-sm-10">
            @Model.Instructor.Id
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Instructor.LastName
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Instructor.FirstName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Instructor.Email
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Instructor.Id">Update</a> |
    <a asp-action="Index">Back to Instructors</a>
</div>
