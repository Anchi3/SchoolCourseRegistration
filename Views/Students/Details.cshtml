@model SchoolCourseRegistration.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: lavenderblush;
        font-weight: 800;
    }

    div {
        font-weight: 800;
    }
</style>

<h1>Student Details</h1>

<div>
    <h4> @Model.Student.FirstName @Model.Student.LastName </h4>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            Student ID
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Id
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Student.LastName
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Student.FirstName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Email
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Student.Id">Update</a> |
    <a asp-action="Index">Back to Students</a>
</div>
